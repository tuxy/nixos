# taken from https://git.sr.ht/~hervyqa/swayhome - top tier :)
{...}: let
  theme = "Breeze-Dark";
  icon = "Papirus-Dark";
  cursor = "breeze_cursors";
  cursor-size = 24;
  font = "Fira Sans";
  font-alt = "Source Sans Pro";
  font-mono = "Fira Mono";
  font-mono-alt = "Source Code Pro";
  font-serif = "Fira Serif";
  font-serif-alt = "Source Serif Pro";
  font-symbol = "FontAwesome";
  font-emoji = "Twitter Color Emoji";
  font-size = 10;
  font-size-alt = 14;
in {
  inherit theme;
  inherit icon;
  inherit cursor;
  inherit cursor-size;
  inherit font;
  inherit font-alt;
  inherit font-mono;
  inherit font-mono-alt;
  inherit font-serif;
  inherit font-serif-alt;
  inherit font-symbol;
  inherit font-emoji;
  inherit font-size;
  inherit font-size-alt;
}
